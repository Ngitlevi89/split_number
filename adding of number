#include <iostream>
using namespace std;

int main()
{
    int number,lim;
    double avg, sum = 0;
    cout << "Enter a number " << endl;
    cin >> number;
    lim = number;

    for (int i = 0;i <= lim;i++)
    {

        sum = sum + number;
        
        number--;
    }
    cout << "The sum is" << sum << endl;
    


    return 0;
}
