#include <iostream>
using namespace std;

int main()
{
    int num1,sum=0;
    cout << "Please enter a number. You will get the sum of its digits." << endl;
    cin >> num1;

    while (num1 != 0)
    {
        sum = sum+ num1 % 10;
        num1 = num1 / 10;

    }
    cout << "the sum is:" << sum << endl;


    return 0;
}
